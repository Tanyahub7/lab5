import numpy as np

# Матриця прибутків F
F = np.array([
    [3, 6, 5, 6],
    [1, 3, 9, 4],
    [4, 1, 8, 4]
])

# Коефіцієнти для зваженого значення (0.4 - для найкращого стану, 0.6 - для найгіршого)
best_weight = 0.4
worst_weight = 0.6

# Визначаємо найгірший і найкращий стани для кожного рішення
best_values = F.max(axis=1)   # Найкраще значення для кожного рядка
worst_values = F.min(axis=1)  # Найгірше значення для кожного рядка

# Розрахунок зваженого значення для кожного рішення
weighted_values = best_weight * best_values + worst_weight * worst_values

# Знаходимо оптимальне рішення
optimal_decision_index = np.argmax(weighted_values) + 1  
optimal_value = weighted_values[optimal_decision_index - 1]


print("Зважені значення для кожного рішення:", weighted_values)
print(f"Оптимальне рішення: x_{optimal_decision_index} з зваженим значенням {optimal_value}")
